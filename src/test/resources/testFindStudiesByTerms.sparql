PREFIX rdfs: <http://www.w3.org/2000/01/rdf-schema#>
prefix ontology: <http://trials.drugis.org/ontology#>

SELECT ?study ?label2 ?comment2 WHERE {
  graph ?graph {
    {
      ?study
        a ontology:Study ;
        rdfs:label ?label .
        FILTER regex(?label, "$searchTerm", "i") .
    } UNION {
      ?study
        a ontology:Study ;
        rdfs:comment ?comment
      FILTER regex(?comment, "$searchTerm", "i")
    }.
    ?study rdfs:label ?label2 .
    OPTIONAL {?study rdfs:comment ?comment2 .}
  }
}